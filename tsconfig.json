{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "importHelpers": true,
    "paths": {
      "~playwright/*": ["playwright/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__stories__",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "src/demo/**"
  ]
}
