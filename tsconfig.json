{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "importHelpers": true,
    "paths": {
      "~playwright/*": ["playwright/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/__tests__", "**/*.test.ts", "**/*.test.tsx"]
}
